<UserControl x:Class="PrismContactTracing.WPF.Views.ResidentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrismContactTracing.WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1157">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid Margin="10,50,10,10">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Height="35" Width="100"
                        Background="White"
                        HorizontalAlignment="Left"
                        Content="Search"
                        Foreground="#23765A"
                        FontSize="18"
                        Visibility="{Binding IsVisible}"
                        Command="{Binding ExecuteSearchContentCommand}" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="280"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <TextBox Text="{Binding ResidentName, Mode=TwoWay}" Style="{DynamicResource MaterialDesignTextBox}"
                         materialDesign:HintAssist.Hint="Resident name" materialDesign:HintAssist.FloatingScale="0.8" materialDesign:HintAssist.IsFloating="True" materialDesign:HintAssist.HelperTextFontSize="20"
                         Foreground="#FFFFFF"
                         FontFamily="Montserrat" FontSize="18"
                         MinHeight="50" Height="50" Width="267"
                         HorizontalAlignment="Left"
                         Visibility="{Binding IsVisible}"/>
                <TextBlock Text="Resident List" 
                           Foreground="White" 
                           FontSize="18"
                           FontFamily="Montserrat SemiBold" 
                           FontWeight="Regular" 
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"/>
            </Grid>
            <Grid Height="790" Width="1157" VerticalAlignment="Top">
                <Border CornerRadius="10" Background="White" Grid.ColumnSpan="2"></Border>
                <DataGrid x:Name="MainGrid" ItemsSource="{Binding MainDataTable}" IsReadOnly="False" CanUserAddRows="False"
                          SelectedItem="{Binding ResidentDataRowView}" SelectionMode="Extended" SelectionUnit="FullRow" Grid.ColumnSpan="2" Cursor="{Binding CursorType}"/>
                <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                    FontFamily="Montserrat"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Height="50"
                    Content="Archive" Margin="662,703,365,37" Background="#23765A"/>
                <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                    FontFamily="Montserrat"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Height="50"
                    Content="Update" Margin="826,703,215,37" Background="#23765A" Command="{Binding ExecuteApplyUpdateCommand}"/>
                <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                    FontFamily="Montserrat"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Height="50"
                    Content="Register" Margin="974,703,49,37" Background="#23765A" Command="{Binding ExecuteRegistrationDialogCommand}"/>
            </Grid>
        </StackPanel>
        <materialDesign:Card UniformCornerRadius="25" Width="200" Height="50" materialDesign:ShadowAssist.ShadowDepth="Depth4" VerticalAlignment="Bottom" Margin="0,0,0,50" RenderTransformOrigin="0.5,0.5">
            <materialDesign:Card.RenderTransform>
                <TransformGroup>
                    <TranslateTransform Y="{Binding NotifTransform}"/>
                </TransformGroup>
            </materialDesign:Card.RenderTransform>
            <Grid>
                <TextBlock Text="{Binding NotifMessage}" FontFamily="Montserrat Semibold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </materialDesign:Card>
        <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Opacity="{Binding SpinnerEnable}" SpinDuration="2" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#000000"/>
    </Grid>
</UserControl>
