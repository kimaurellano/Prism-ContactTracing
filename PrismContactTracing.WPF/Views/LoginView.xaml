<UserControl x:Class="PrismContactTracing.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrismContactTracing.WPF.Views"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <Style x:Key="MainBG" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#23765A" Offset="0.0" />
                        <GradientStop Color="#4F9847" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomMaterialDesignFlatButton"  
               BasedOn="{StaticResource MaterialDesignFlatButton}"
               TargetType="{x:Type Button}">
            <Style.Resources>
                <Color x:Key="PrimaryHueMidBrushColor">#FFFFFF</Color>
                <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FFFFFF" />
            </Style.Resources>
        </Style>
        <Style x:Key="CustomMaterialDesignFilledTextBox"
               BasedOn="{StaticResource MaterialDesignTextBox}"
               TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Color x:Key="PrimaryHueMidBrushColor">#FFFFFF</Color>
                <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FFFFFF" />
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid Style="{StaticResource MainBG}">
        <TextBlock Text="BARANGAR TEJERO CONTACT TRACING" HorizontalAlignment="Center" VerticalAlignment="Top" 
                       TextBlock.Foreground="#FFFFFF" FontFamily="Montserrat Semibold" FontSize="46" FontWeight="Regular" 
                       Margin="0,71,0,0"/>
        <StackPanel Margin="486,0,486,0">
            <TextBlock Text="Login" HorizontalAlignment="Center" 
                       TextBlock.Foreground="#FFFFFF" FontFamily="Montserrat Semibold" FontSize="38" FontWeight="Regular" 
                       Margin="0,290,0,0"/>
            <TextBox Style="{DynamicResource MaterialDesignTextBox}"
                     materialDesign:HintAssist.Hint="Username" materialDesign:HintAssist.FloatingScale="0.8" materialDesign:HintAssist.IsFloating="True" materialDesign:HintAssist.HelperTextFontSize="20"
                     Foreground="#FFFFFF"
                     FontFamily="Montserrat" FontSize="18"
                     MinHeight="50" Height="50" Width="267"
                     Margin="0,60,0,0"/>
            <PasswordBox Style="{DynamicResource MaterialDesignPasswordBox}"
                         materialDesign:HintAssist.Hint="Password" materialDesign:HintAssist.FloatingScale="0.8" materialDesign:HintAssist.IsFloating="True" materialDesign:HintAssist.HelperTextFontSize="20"
                         Foreground="#FFFFFF"
                         FontFamily="Montserrat" FontSize="18" HorizontalAlignment="Center"
                         MinHeight="50" Height="50" Width="267"
                         Margin="0,80,0,0"/>
            <Button Content="LOGIN" Style="{StaticResource CustomMaterialDesignFlatButton}" Command="{Binding ExecuteGenericDelegateCommand}" CommandParameter="{Binding ElementName=txtPassword}" IsDefault="True" 
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Background="#FFFFFF" Foreground="#000000" BorderThickness="0"
                    FontFamily="Montserrat Semibold"
                    Height="50" Width="150"
                    Margin="0,70,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
